<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4EFEF"
        tools:context=".OtpVarification">


        <TextView
            android:id="@+id/login_greet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP Varification"
            android:textSize="30sp"
            android:paddingStart="25dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/primary"
            />

        <TextView
            android:id="@+id/login_text"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the varfication code we just sent on your email address."
            android:textSize="18sp"
            android:textColor="#474545"
            android:fontFamily="sans-serif-condensed"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/login_et"
            android:layout_marginEnd="20dp"
            android:autofillHints="emailAddress"
            android:inputType="text" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2"
                android:background="@drawable/login_et"
                android:layout_marginEnd="20dp"
                android:autofillHints="emailAddress"
                android:inputType="text" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="3"
                android:background="@drawable/login_et"
                android:layout_marginEnd="20dp"
                android:autofillHints="emailAddress"
                android:inputType="text" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="4"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_et"
                android:autofillHints="emailAddress"
                android:inputType="text" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textSize="22sp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#05115A"
            android:textColor="@color/white"
            android:background="@drawable/login_signup_btn"
            android:elevation="5dp"
            />


        <ImageView
            android:layout_width="150sp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/loginsign" />

    </LinearLayout>

</ScrollView>
