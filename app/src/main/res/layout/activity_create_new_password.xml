<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4EFEF"
        tools:context=".CreateNewPassword">


        <TextView
            android:id="@+id/login_greet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Password"
            android:textSize="30sp"
            android:paddingStart="25dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/primary"
            />

        <TextView
            android:id="@+id/login_text"
            android:paddingStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your new password must be unique from those previously used."
            android:textSize="18sp"
            android:textColor="#474545"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="18sp"
            android:textColor="#474545"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif-condensed"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Password"
            android:layout_marginLeft="30dp"
            android:background="@drawable/login_et"
            android:layout_marginRight="30dp"
            android:autofillHints="password"
            android:drawableEnd="@drawable/eye_regular"
            android:inputType="text" />

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="18sp"
            android:textColor="#474545"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif-condensed"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:layout_marginLeft="30dp"
            android:background="@drawable/login_et"
            android:layout_marginRight="30dp"
            android:autofillHints="emailAddress"
            android:inputType="textPassword"
            android:layout_marginBottom="30dp"
            android:drawableEnd="@drawable/eye_regular"
            />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="22sp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#05115A"
            android:textColor="@color/white"
            android:background="@drawable/login_signup_btn"
            android:elevation="5dp"
            />


        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="150sp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/loginsign" />

    </LinearLayout>

</ScrollView>
