<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PrivacyPolicy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Smartloop! We value your privacy and are committed to protecting your personal information. This Privacy Policy explains how we collect, use, and share information about you when you use our platform." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information We Collect"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:text="Personal Information" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - We collect information that you provide to us directly, such as when you create an account, enroll in a course, or communicate with us. This information may include your name, email address, payment information, and any other details you choose to provide." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:text="Usage Information" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - We collect information about your interactions with our platform, including the courses you access, the time spent on our site, and other usage details. This helps us improve our services and provide a better experience for our users." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:text="Device Information" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - We collect information about the device you use to access our platform, including the hardware model, operating system, and unique device identifiers. This information helps us ensure that our platform is compatible with various devices and improve our services." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How We Use Information"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We use the information we collect to:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Provide, maintain, and improve our services" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Process transactions and send related information" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Communicate with you, including sending updates and promotional materials" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Monitor and analyze usage and trends to improve your experience" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Personalize and improve our services, including providing recommendations" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sharing of Information"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We may share information about you as follows:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:text="With Service Providers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - We may share your information with third-party vendors, consultants, and other service providers who need access to such information to carry out work on our behalf." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:text="For Legal Reasons" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - We may share your information in response to a request for information if we believe disclosure is in accordance with any applicable law, regulation, or legal process." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:text="With Your Consent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - We may share your information with your consent or at your direction." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We take the security of your information seriously and use reasonable measures to protect it. However, please be aware that no security measures are perfect or impenetrable." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Choices"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have choices regarding the information we collect and how it is used:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - You can update or delete your account information at any time through your account settings." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - You can opt-out of receiving promotional communications from us by following the instructions in those communications." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changes to this Policy"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We may update this Privacy Policy from time to time. If we make significant changes, we will notify you through our platform or by other means, so you can review the changes before continuing to use our services." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="If you have any questions about this Privacy Policy, please contact us at support@smartloop.com." />
    </LinearLayout>

</ScrollView>