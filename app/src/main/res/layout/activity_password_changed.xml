<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4EFEF"
        tools:context=".PasswordChanged">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:src="@drawable/check"
        />

        <TextView
            android:id="@+id/login_greet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Changed!"
            android:textSize="30sp"
            android:paddingStart="25dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/primary"
            />

        <TextView
            android:id="@+id/login_text"
            android:paddingStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Password has changed successffully"
            android:textSize="18sp"
            android:textColor="#474545"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif-condensed"
            />



        <Button
            android:id="@+id/btn_back_to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textSize="22sp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#05115A"
            android:textColor="@color/white"
            android:background="@drawable/login_signup_btn"
            android:elevation="5dp"
            />


        <ImageView
            android:layout_width="150sp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/loginsign" />

    </LinearLayout>

</ScrollView>
